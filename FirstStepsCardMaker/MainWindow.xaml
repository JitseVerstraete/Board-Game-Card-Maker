<Window x:Class="FirstStepsCardMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstStepsCardMaker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="Gray" StrokeThickness="2"  Stroke="Black" Margin="5"/>
        <StackPanel Margin="10">
            <TextBlock Text="Card Type:"/>
            <ComboBox/>
        </StackPanel>

        <Image x:Name="im" Grid.Column="1" Stretch="Uniform" VerticalAlignment="Top"/>
    </Grid>
</Window>
